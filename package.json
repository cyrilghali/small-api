    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
